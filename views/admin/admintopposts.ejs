<div class="post_container">
  <div class="lap_postcontainer">
     <div class="fig_con">
  <figure>
     <figcaption><h2 class="content_newsh"><%= data.title %></h2></figcaption>
     <span style="font-size: 12px;font-family: 'Newsreader', serif;"><%= data.createdAt.toDateString() %></span>
     <div class="container_img"><img id="news_photo" src=<%="data:image/png;base64,"+ data.img.data.toString("base64") %> alt=""/></div>
  </figure>
  <div class="article_container"> <article>
   <span class="content_news"><%=data.body  %></span>&nbsp;
   <% if (!data.link==undefined) { %>
     <span class="link_container" style="color:red;">
        <a href="<%= data.link %>" target="_blank"><u><em>click for more info</em></u></a>
     </span>
     
     <% } %>
</article> </div>
<% if (!data.img2==undefined) { %>
 <div class="container_img"><img id="news_photo" src=<%="data:image/png;base64,"+ data.img2.data.toString("base64") %> alt=""/></div>
 <% } %>
 <% if (!data.vid.data=='') { %>
  


<div class="vid_container">
<video width="320" height="240"  controls>
 <source src="<%="data:video/mp4;base64,"+ data.vid.data.toString("base64") %> " type="video/mp4">
 <source src="movie.ogg" type="video/ogg">
</video>
</div>

<% } %>
<div class="article_container"> <article>
 <span class="content_news"><%=data.body2  %></span>
</article> </div>
     </div>
    </div>

    <div class="btns_container">
     <a href="/edit/<%= data._id %>"><span class="edit_btn">Edit Post</span></a>
    <button onclick="onPopup()" class="delete_btn">Delete Post</button>
  </div>
<div id="popup" class="popup"><div>
 <span style="font-size: 14px;color: white;">Are you sure you want to delete this post ?</span>
  <div class="yes_no"><span style="color: #a00202;cursor: pointer;"><a href="/deletetop/<%= data._id%>">YES</a></span><span  onclick="offPopup()" style="color: rgb(12, 131, 12);cursor: pointer;">NO</span></div>
</div>
</div>
 </div>